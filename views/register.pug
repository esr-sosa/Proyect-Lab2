extends layout

block content
  h1 Registrar
  
  if error
    div.alert.alert-danger
      | #{error}

  form(action="/register", method="POST")
    div
      label(for="username") Usuario:
      input(type="text", name="username", required)

    div
      label(for="password") Contrase√±a:
      input(type="password", name="password", required)

    div
      label(for="tipo") Tipo de usuario:
      select(name="tipo", required)
        option(value="paciente") Paciente
        option(value="profesional") Profesional

    div
      button(type="submit", class="btn") Registrarse

    div
      a(href="/login", class="btn-login") Ya tengo una cuenta
