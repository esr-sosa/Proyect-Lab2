extends layout

block content
    .container-fluid.py-4
        .row.justify-content-center
            .col-12.col-md-8.col-lg-6
                .card.shadow-lg.border-0
                    .card-header.bg-primary.text-white.py-3
                        h4.mb-0.fw-bold
                            i(class=`fas ${obra ? 'fa-edit' : 'fa-plus-circle'} me-2`)
                            = obra ? 'Editar Obra Social' : 'Nueva Obra Social'
                    
                    .card-body.p-4
                        form#obraSocialForm.needs-validation(novalidate)
                            input(type="hidden" name="id_obra_social" value=obra ? obra.id_obra_social : '')
                            
                            .mb-4
                                label.form-label.fw-bold(for="nombre")
                                    i.fas.fa-building.me-2
                                    | Nombre de la Obra Social
                                .input-group.input-group-lg
                                    span.input-group-text.bg-light
                                        i.fas.fa-hospital-alt
                                    input#nombre.form-control.form-control-lg(
                                        type="text" 
                                        name="nombre" 
                                        required 
                                        placeholder="Ingrese el nombre de la obra social"
                                        value=obra ? obra.nombre : ''
                                    )
                                .invalid-feedback
                                    | Por favor, ingrese un nombre v√°lido
                            
                            .d-flex.justify-content-end.gap-3.mt-4
                                a.btn.btn-secondary.btn-lg(href="/obraSocial")
                                    i.fas.fa-arrow-left.me-2
                                    | Volver
                                button.btn.btn-primary.btn-lg(type="submit")
                                    i.fas.fa-save.me-2
                                    | Guardar Cambios

