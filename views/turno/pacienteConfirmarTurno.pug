extends ../layout

block content
  .container-fluid
    .row
      .col-md-12
        .card
          .card-header
            h4.text-center.text-primary Confirmar turno en #{clinica.nombre}
            if procedimiento
              h5.text-center.text-danger Procedimiento: #{procedimiento.nombre}
          
          .card-body
            form(method="post" action="/turno/reservar")
              input(type="hidden" name="turnoId" value=turno.turniid)
              input(type="hidden" name="personaId" value=user.personaid)
              
              .row.mb-3
                .col-md-6
                  .form-group
                    label.form-label Fecha
                    input.form-control(type="text" readonly value=moment(calendario.fechaturno).format('DD/MM/YYYY'))
                .col-md-6
                  .form-group
                    label.form-label Hora
                    input.form-control(type="text" readonly value=turno.inicioturno)

              if procedimiento
                .row.mb-3
                  .col-md-12
                    .alert.alert-info
                      h6 Indicaciones importantes:
                      p #{procedimiento.indicaciones}

              .row.mt-4
                .col-md-12.text-center
                  a.btn.btn-secondary.me-2(href="/turno/buscarAgenda") Cancelar
                  button.btn.btn-primary(type="submit") Confirmar Turno 