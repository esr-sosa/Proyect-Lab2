extends ../layout

block content
  div.container-fluid.px-4.py-4
    div.row.justify-content-center
      div.col-md-8
        div.card.shadow
          h2.card-title.p-4.bg-primary.text-white.mb-0
            i.fas.fa-hospital.me-2
            | #{title}
          
          if error
            div.alert.alert-danger.m-3= error
          if success
            div.alert.alert-success.m-3= success
          
          div.card-body.p-4
            form(method='POST' action=sucursal ? `/sucursal/guardar/${sucursal.sucursalid}` : '/sucursal/guardar')
              div.form-group.mb-4
                label.form-label.fw-bold(for='nombre_sucrsal')
                  i.fas.fa-building.me-2
                  | Nombre de la Sucursal:
                input#nombre_sucrsal.form-control.form-control-lg(
                  type='text'
                  name='nombre_sucrsal'
                  value=sucursal ? sucursal.nombre_sucrsal : ''
                  required
                  placeholder='Ingrese el nombre de la sucursal'
                )

              div.form-group.mb-4
                label.form-label.fw-bold(for='direccion')
                  i.fas.fa-map-marker-alt.me-2
                  | Dirección:
                input#direccion.form-control.form-control-lg(
                  type='text'
                  name='direccion'
                  value=sucursal ? sucursal.direccion : ''
                  required
                  placeholder='Calle, número, piso, depto'
                )

              div.form-group.mb-4
                label.form-label.fw-bold(for='telefono')
                  i.fas.fa-phone.me-2
                  | Teléfono:
                input#telefono.form-control.form-control-lg(
                  type='text'
                  name='telefono'
                  value=sucursal ? sucursal.telefono : ''
                  required
                  placeholder='Ej: 266-5032890'
                )

              div.button-container.d-flex.justify-content-end.gap-3.mt-5
                a.btn.btn-secondary.btn-lg(href='/sucursal')
                  i.fas.fa-arrow-left.me-2
                  span Volver
                button.btn.btn-primary.btn-lg(type='submit')
                  i.fas.fa-save.me-2
                  span #{sucursal ? 'Actualizar' : 'Guardar'}