doctype html
html(lang="es")
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='/css/components.css')
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    header.main-header
      div.header-content
        div.logo
          a(href="/inicio")
            i.fas.fa-hospital-alt
            h1 Portal de Consultas Médicas
        if !user
          div.auth-buttons
            a(href="/login", class="btn-primary")
              i.fas.fa-sign-in-alt
              span Iniciar Sesión
        if user
          div.user-header
            div.user-info-header
              if user.foto_perfil
                img.user-avatar(src=`/uploads/profile/${user.foto_perfil}` alt="Foto de perfil")
              else
                i.fas.fa-user-circle
              div.user-details
                span.user-name #{user.nombre} #{user.apellido}
                span.user-role #{user.tipo_perfil}
    main.main-content
      block content
    
    script.
      function toggleUserStatus(userId, newStatus) {
        fetch(`/usuarios/toggle-status/${userId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ estado: newStatus })
        })
        .then(response => {
          if (response.ok) {
            window.location.reload();
          } else {
            alert('Error al cambiar el estado del usuario');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error al cambiar el estado del usuario');
        });
      }
