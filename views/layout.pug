doctype html
html(lang="es")
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/styles.css')
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    header
      div.logo
        h1 Portal de Consultas Médicas
      if !user
        div.cerrar(style="text-align: right;") 
          a(href="/login", class="btn-cerrar") Inciar Sesión
      if user
        div.cerrar(style="text-align: right;") 
          h4 #{user.nombreEmpleado} #{user.apellidoEmpleado}
          a(href="/logout", class="btn-cerrar") Cerrar Sesión
    main
      block content
    footer
      p © 2024 Emanuel Sosa and Benito Mauro
    script(src='/js/client.js')
